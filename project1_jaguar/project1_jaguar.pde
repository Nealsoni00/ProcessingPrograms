void setup() {
  size(1280, 500);
  smooth();
}

void draw() {
    background(255);

  ellipseMode(CENTER);
  rectMode(CENTER);
//+320
  //ears
  line(0+320, 0, 80+320, 100);
  line(0+320, 0, 100+320, 80);
  line(500+320, 0, 400+320, 80);
  line(500+320, 0, 420+320, 100);

  //body
  curve(250+320, 330, 100+320, 80, 400+320, 80, 250+320, 330);

  //curvy face
  curve(300+320, 100, 80+320, 100, 100+320, 350, 500+320, 500);
  curve(200+320, 400, 420+320, 100, 400+320, 350, 0+320, 200);

  curve(0+320, 500, 100+320, 350, 150+320, 450, 80+320, 380);
  curve(500+320, 500, 400+320, 350, 350+320, 450, 420+320, 520);

  curve(250+320, 150, 150+320, 450, 350+320, 450, 250+320, 150);
  //eyes
  ellipse(150+320, 150, 90, 40);

  ellipse(350+320, 150, 90, 40);
  fill(170,mouseX,mouseX);
  ellipse(350+320, 150, 25, 25);
  ellipse(150+320, 150, 25, 25);

  //nose
  line(210+320, 240, 290+320, 240);
  line(210+320, 240, 250+320, 290);
  line(290+320, 240, 250+320, 290);

  //mouth
  line(180+320, 350, 320+320, 350);
  line(200+320, 420, 300+320, 420);
  line(180+320, 350, 200+320, 420);
  line(320+320, 350, 300+320, 420);

  //tongue
  noFill();
  curve(250+320, mouseY-200, 195+320, 350, 305+320, 350, 250+320, mouseY-200);
}


